{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es6",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "lib": [
            "ES2022",
            "DOM"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true,
        "preserveSymlinks": true,
        "types": []
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./test/setup.ts",
        "node_modules",
        "./site/build.ts"
    ]
}